CREATE TABLE CUSTOMER (USER_ID BIGINT AUTO_INCREMENT NOT NULL, BIRTHDAY VARCHAR(255), CREATIONDATE DATE, DATEOFBIRTH DATE, GENDER VARCHAR(255), MOBILEPHONE VARCHAR(255), NAME VARCHAR(255), PASSWORD VARCHAR(32), SURNAME VARCHAR(255), USERNAME VARCHAR(255), CITY VARCHAR(255), PROVINCE VARCHAR(255), STREET VARCHAR(255), ZIPCODE VARCHAR(255), PRIMARY KEY (USER_ID))
CREATE TABLE GROUPS (GROUP_ID BIGINT AUTO_INCREMENT NOT NULL, DESCRIPTION VARCHAR(255), GROUP_NAME VARCHAR(255), PRIMARY KEY (GROUP_ID))
CREATE TABLE USERS_GROUPS (USER_ID BIGINT NOT NULL, GROUP_ID BIGINT NOT NULL, PRIMARY KEY (USER_ID, GROUP_ID))
ALTER TABLE USERS_GROUPS ADD CONSTRAINT FK_USERS_GROUPS_USER_ID FOREIGN KEY (USER_ID) REFERENCES CUSTOMER (USER_ID)
ALTER TABLE USERS_GROUPS ADD CONSTRAINT FK_USERS_GROUPS_GROUP_ID FOREIGN KEY (GROUP_ID) REFERENCES GROUPS (GROUP_ID)
